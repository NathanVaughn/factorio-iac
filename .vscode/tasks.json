{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "poetry build",
            "type": "shell"
        },
        {
            "label": "install",
            "command": "poetry install --sync",
            "type": "shell"
        },
        {
            "label": "pre-commit",
            "command": "poetry run pre-commit run --all-files",
            "type": "shell",
            "dependsOn": [
                "install"
            ]
        },
        {
            "label": "update",
            "command": "python wrapper.py pulumi update --stack prod --yes",
            "type": "shell"
        },
        {
            "label": "preview",
            "command": "python wrapper.py pulumi preview --stack prod",
            "type": "shell"
        }
    ]
}